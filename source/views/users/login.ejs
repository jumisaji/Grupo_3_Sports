<!DOCTYPE html>
<html lang="en">
<!--    **************************************************   HEAD   ****************************************************    -->
<!--head-->
<%- include('../includes/head') %>
<script src="https://unpkg.com/validator@latest/validator.min.js"></script>
<script defer src ="/scripts/loginvalidation.js"></script>

<!--/head-->
<!--    **************************************************   BODY   ****************************************************    -->
<body>
<!--    **************************************************   HEADER   ****************************************************    -->
    <!--header-->
    <%- include('../includes/header') %>
    <!--/header-->
    <!--    **************************************************   MAIN   ****************************************************    -->    
    <main class="seccionlogin">
        <section id="login">
            <section>
                <img class="logo_login" src="/images/logos/logo_go_bike_cart_y Log.png" alt="logo gobike">
            </section>
            <form action="/users/access" id="form-login" method="post">
                <input id="input-email" class="ingresotexto" type="email" name="email" placeholder="Nombre de usuario o correo" value="<%= locals.oldData ? oldData.email : null %>">
                <% if (locals.errors && errors.email) { %>                                                                                      
                    <p class="msg-error"> <%= errors.email.msg %> </p>
                 
                <% } %>
                    <input id="input-password" class="ingresotexto" type="password" name="password" placeholder="Contraseña" value="<%= locals.oldData ? oldData.password : null %>">
                    <% if (locals.errors && errors.password) { %>                                                                                      
                        <p class="msg-error"> <%= errors.password.msg %> </p>
                     
                    <% } %>  
                    <div class="errores">
                        <ul class="styleerror">
        
                        </ul>
                    </div> 
                    <nav>
                        <a href="/">
                            <h4 id="forgotPass">¿olvidaste tu contraseña?</h4>
                        </a>
                        <label for="Recordame">Recordarme</label>
                        <input type="checkbox" name="recordame"><br>
                    </nav>
                    <button class="boton-ingreso" type="submit" name="login" id="botonLogIngreso">Ingreso</button>
            </form>
        </section>
        <section class="login2">
            <h2>Ingresa con tus redes</h2>
            <nav class="cajaiconos">
                
                
                
                
                <a class="iconosredes" href="/"><i class="fa-brands fa-facebook-square"></i></a>
                
                <a class="iconosredes" href="/"><i class="fa-brands fa-instagram"></i></a>
                
                
                
                
                
                
                
                
                
                <a class="iconosredes" href="/"><i class="fa-brands fa-google"></i></a>
            </nav>
            <a class="nuevoregistro" href="register" id="botonLogNewReg" >Nuevo Registro</a>
        </section>
    </main>
    <!--    **************************************************  CHAT WHATSAPP   ********************************************  -->
    <%- include('../includes/bodywhapp') %>
    <!--    **************************************************  FOOTER   ****************************************************  --> 
     <!--footer-->
     <%- include('../includes/footer') %>
     <!--/footer-->
</body>
</html>