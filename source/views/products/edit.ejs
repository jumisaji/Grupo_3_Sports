<!--    **************************************************  BODY  ****************************************************  -->
<body>
<!--    **************************************************  HEADER  **************************************************  -->
    <!--header-->
    <%- include('../includes/header') %>
    <!--/header-->
<!--    **************************************************  MAIN   **************************************************** -->
    <main>         
        <section>
            <h2>Edit product <%= product.id %> </h2>
            <form action="/products/edit/<%= product.id %>?m=PUT" method="post" enctype="multipart/form-data">
                <input type="text" name="name" id="name" placeholder="nombre del producto" autocomplete="off" value="<%= product.name %>">
                <textarea name="description" id="description" autocomplete="off"><%= product.desciption %></textarea>
                <input type="file" name="image" id="image" autocomplete="off" multiple>
                <input type="text" name="categoria" id="categoria" placeholder="categoria" autocomplete="off" value="<%= product.category %>">
                <input type="text" name="color del producto" id="color del producto" placeholder="color del producto" autocomplete="off" value="<%= product.color %>">
                <input type="number" name="price" id="price" placeholder="Price" autocomplete="off" value="<%= product.price %>">
                <button type="submit">Update</button>
            </form>
        </section>
    </main>
    <!--    **************************************************  CHAT WHATSAPP   **************************************  -->
    <%- include('../includes/bodywhapp') %>
    <!--    **************************************************  FOOTER   *********************************************  --> 
     <!--footer-->
     <%- include('../includes/footer') %>
     <!--/footer-->
</body>
</html>