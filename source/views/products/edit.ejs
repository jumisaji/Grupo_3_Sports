<!--    **************************************************  BODY  ****************************************************  -->
<body>
<!--    **************************************************  HEADER  **************************************************  -->
    <!--header-->
    <%- include('../includes/header') %>
    <!--/header-->
<!--    **************************************************  MAIN   **************************************************** -->
    <main id="edit">         
        <section id="seccionedit1">
            <picture ><img class="imgedit" src="/images/logos/logo_go_bike_cart_y Log.png" alt=""></picture>
            <h2 id="titleEdit">Editar producto <%= product.id %> </h2>
        </section>
        <section id="seccionedit2">
            <form id="editform" action="/products/edit/<%= product.id %>?m=PUT" method="POST" enctype="multipart/form-data">
                <input class="formCreacion" type="text" name="name" id="name" placeholder="nombre del producto" autocomplete="off" value="<%= product.name %>">
                <input class="formCreacion" type="number" name="price" id="price" placeholder="Precio" autocomplete="off" value="<%= product.price %>">
               
                <input class="imagenCreacion"type="file" name="image" id="image" autocomplete="off" value="<%= product.image %>">   
                <textarea class="formCreacion" name="description" id="description" autocomplete="off" value="<%= product.description %>"></textarea>
                <div class="errores">
                    <ul class="styleerror">
                      
                    </ul>
                </div>
                <button id="botonEditar" type="submit">editar</button>
            </form>
        </section>
    </main>
    <!--    **************************************************  CHAT WHATSAPP   **************************************  -->
    <%- include('../includes/bodywhapp') %>
