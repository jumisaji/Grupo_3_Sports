<!DOCTYPE html>
<html lang="en">
<!--    **************************************************   HEAD   ****************************************************    -->
<!--head-->
<%- include('../includes/head') %>
    <!--/head-->
    <!--    **************************************************   BODY   ****************************************************    -->

    <body>
        <!--    **************************************************   HEADER   ****************************************************    -->
        <!--header-->
        <%- include('../includes/header') %>
            <!--/header-->
            <!--    **************************************************   MAIN  ****************************************************    -->
            <main id="maindetalle">
                <% if (!User) { %>
                    <section class="secciongeneral">
                        <section class="seccion-imagen">
                            <picture><img class="imgdetalle" src="/products/<%= product.imageid  %>" alt=""></picture>
                        </section>



                        <section class="nombre-descripcion">
                            <h2 class="nombreproduct">
                                <%= product.name %> - <span class="precio">$<%= product.price %></span>
                            </h2>

                            <p class="descripcion-producto">
                                <%= product.description %>
                            </p>
                        </section>
                    </section>






                    <% } else if (User && User.isadmin) { %>
                        <section class="secciongeneral">
                            <section class="seccion-imagen">
                                <picture><img class="imgdetalle" src="/products/<%= product.imageid  %>" alt="">
                                </picture>
                            </section>
                            <section class="nombre-descripcion">
                                <h2 class="nombreproduct">
                                    <%= product.name %> - 
                                    <br>
                                    <span class="precio">$<%= product.price %></span>
                                </h2>
                                <p class="descripcion-producto">
                                    <%= product.description %>
                                </p>
                                <form action="/products/delete/<%= product.id %>?m=DELETE" method="post">
                                    <button class="borrar" type="submit">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                                <form action="/products/edit/<%= product.id %>" method="get">
                                    <button class="editar" type="submit">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </button>
                                </form>

                                <% } %>
                            </section>
                        </section>


            </main>
            <!--    **************************************************  CHAT WHATSAPP   ********************************************  -->
            <%- include('../includes/bodywhapp') %>
                <!--    **************************************************  FOOTER   ****************************************************  -->
                <!--footer-->
                <%- include('../includes/footer') %>
                    <!--/footer-->
    </body>

</html>