<!DOCTYPE html>
<html lang="en">
  <!--    **************************************************  HEAD  ****************************************************  -->
  <!--head-->
  <%- include('../includes/head') %>
  
  <!--/head-->
  <!--    **************************************************  BODY  ****************************************************  -->

  <body>
    <!--    **************************************************  HEADER  **************************************************  -->
    <!--header-->
    <%- include('../includes/header') %>
    <!--/header-->
    <!--    **************************************************  MAIN   **************************************************** -->
    <main id="maincreate">
      <img
        class="logocreate"
        src="/images/logos/logo_go_bike_cart_y log.png"
        alt=""
      />

      <form
        action="/products/save"
        method="post"
        enctype="multipart/form-data"
        id="createForm"
      >
        <input
          class="formcreacion"
          type="text"
          name="name"
          id="name"
          placeholder="nombre del producto"
          autocomplete="off"
          value="<%= locals.oldData ? oldData.name : null %>"
        />
        
        <input
          class="formcreacion"
          type="number"
          name="price"
          id="price"
          placeholder="Precio"
          autocomplete="off"
          value="<%= locals.oldData ? oldData.price : null %>"
        />
        
        <br />
        <label class="label" for="image">imagen del producto</label>
        <br />
        <input
          class="imagencreacion"
          type="file"
          name="image"
          id="image"
          autocomplete="off"
          value="<%= locals.oldData ? oldData.image : null %>"
        />
          
        <textarea
          class="formcreacion"
          name="description"
          id="description"
          autocomplete="off"
          placeholder="DescripciÃ³n"
        ><%= locals.oldData ? oldData.description : null %></textarea>
        
        <div class="errores">
          <ul class="styleerror">
            <% if (locals.errors && errors.name) { %>                                                                                      <!--nombre-->
              <p class="msg-error"> <%= errors.name.msg %> </p>
    
          <% } %>
          <% if (locals.errors && errors.price) { %>                                                                                      <!--nombre-->
            <p class="msg-error"> <%= errors.price.msg %> </p>
  
        <% } %>
        <% if (locals.errors && errors.image) { %>                                                                                      <!--nombre-->
          <p class="msg-error"> <%= errors.image.msg %> </p>

      <% } %> 
      <% if (locals.errors && errors.description) { %>                                                                                      <!--nombre-->
        <p class="msg-error"> <%= errors.description.msg %> </p>

    <% } %>
          </ul>
        </div>
        <button id="botoncrear" type="submit">crear</button>
      </form>
    </main>
    <!--    **************************************************  CHAT WHATSAPP   **************************************  -->
    <%- include('../includes/bodywhapp') %>
    <!--    **************************************************  FOOTER   *********************************************  -->
    <!--footer-->
    <%- include('../includes/footer') %>
    <!--/footer-->
  </body>
</html>
