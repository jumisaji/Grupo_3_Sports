<!DOCTYPE html>
<html lang="en">
<!--    **************************************************  HEAD  ****************************************************  -->
<!--head-->
<%- include('../includes/head') %>
<!--/head-->
<!--    **************************************************  BODY   ***************************************************  -->
<body>
    <!--    **********************************************  HEADER  **************************************************  --> 
    <!--header-->
    <%- include('../includes/header') %>
    <!--/header-->
    <!--    **********************************************  MAIN   **************************************************  --> 
    <main class="bicicletas">
        <!--SECCIÓN CATEGORÍAS DE BICICLETAS-->
        <section>
            <h2>Todas las bicicletas</h2>
            <form action="/products/" method="get">
                <input type="text" name="name" id="name" placeholder="Bicycle name">
                <button type="submit">Search</button>
            </form>
            <ul>
                <% products.forEach(element => { %>             
                    <li>
                        <a href="/products/productDetail/<%= element.id %>">
                            <picture><img src="/products/<%= element.image  %>" alt=""></picture>
                            <h2><%= element.name %> - <span>$<%= element.price %></span></h2>
                            <p><%= element.description %></p>                   
                        </a>
                    </li>
                <% }) %>
    </main>
    <!--    **************************************************  CHAT WHATSAPP   ********************************************  -->
    <%- include('../includes/bodywhapp') %>
    <!--    **************************************************  FOOTER   ****************************************************  --> 
     <!--footer-->
     <%- include('../includes/footer') %>
     <!--/footer-->
</body>
</html>